
<% include header %>

<form action="/edit/<%= post.author %>/<%= post.time.day %>/<%= post.title %>" method="post">
    标题: <br>
    <input type="text" name="title" value="<%= post.title %>" disabled> <br> <br>
    标签: <br>
    <input type="text" name="tag1" value="<%= post.tags[0] %>" disabled>
    <input type="text" name="tag2" value="<%= post.tags[1] %>" disabled  >
    <input type="text" name="tag3" value="<%= post.tags[2] %>" disabled  > <br> <br>
    正文: <br>
    <textarea name="content" cols="70" rows="10"> <%= post.content %> </textarea>
    <br> <br>
    <button type="submit">更新</button>
</form>


<% include footer %>